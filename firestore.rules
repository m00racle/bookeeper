rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to "users" collection only if authenticated user UID matches document ID
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null;
    }
    
    // Add more rules for other collections and documents as needed
    
  }
}